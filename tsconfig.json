{
    "compilerOptions": {
        // Isso faz o VSCode reconhecer Delégua como módulo linkado,
        // mas os testes falham no Jest.
        "baseUrl": ".",
        "paths": {
            "@designliquido/delegua": ["node_modules/@designliquido/delegua/dist"],
            "@designliquido/delegua/*": ["node_modules/@designliquido/delegua/dist/*"],
        },
        "outDir": "dist",
        "module": "CommonJS",
        "target": "es2017",
        "mapRoot": "dist",
        "rootDir": "fontes",
        "sourceRoot": "fontes",
        "strict": false,
        "allowJs": false,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "preserveSymlinks": true,
        "experimentalDecorators": true
    },
    "exclude": [
        "babel.config.js", 
        "coverage",
        "docs",
        "dist/**/*",
        "jest.config.ts",
        "node_modules",
        "testes"
    ]
}
